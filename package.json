{
  "name": "playgrounder",
  "private": true,
  "version": "0.19.2",
  "description": "An interactive playground map for tracking visited playgrounds nearby",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "validate-translations": "tsx src/i18n/validateTranslations.ts",
    "version": "npm run changelog && git add CHANGELOG.md",
    "postversion": "git push && git push --tags && awk -v ver=\"$npm_package_version\" 'BEGIN{p=0}/^## \\[/{if(p){exit}if($0~ver){p=1;next}}p{print}' CHANGELOG.md > .release-notes.md && gh release create \"v$npm_package_version\" --title \"Release v$npm_package_version\" --notes-file .release-notes.md && rm .release-notes.md",
    "changelog": "tsx scripts/update-changelog.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "vitest related --run"
    ]
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.8.0",
    "@eslint/js": "^9.19.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/leaflet.markercluster": "^1.5.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "i18next": "^25.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "~5.8.0",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-pwa": "^0.21.1",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.7.0",
    "@supabase/supabase-js": "^2.48.1",
    "@types/leaflet": "^1.9.16",
    "framer-motion": "^12.4.1",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "react-i18next": "^15.4.0",
    "react-icons": "^5.5.0",
    "react-leaflet": "^5.0.0",
    "react-leaflet-markercluster": "^5.0.0-rc.0",
    "react-router-dom": "^7.1.5",
    "react-turnstile": "^1.1.4"
  }
}
